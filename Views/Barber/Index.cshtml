@model BarberManagement.Models.BarberAdminModel;

@{
	var successMessage = TempData["SuccessRegister"] as string;
}

<div class="w-100 border border-1 border-white card d-flex justify-content-center align-items-center" data-aos="fade-right">


	<form asp-controller="Barber" asp-action="BarberRegister" id="form-register-barber" class="w-100 d-flex justify-content-center align-items-center flex-column gap-2 mt-4 h-100" method="POST">

		@if (!String.IsNullOrEmpty(successMessage))
		{
			<div id="success-box" class="alert alert-success mb-1 mt-0 p-1">
				@successMessage
			</div>
		}

		<input required asp-for="NameAdm" id="name-barber" type="text" placeholder="Nome..."
			   class="h-35 border-none w-50 mx-auto px-2 input-register-client mx-auto border border-1" />

		<input required asp-for="PasswordAdm" title="Data de nascimento do cliente..." placeholder="Senha..." id="password-adm" type="password"
			   class="h-35 border-none w-50 mx-auto px-2 input-register-client mx-auto border border-1" />

		<textarea required asp-for="Annotations" id="address-client" type="text" placeholder="Anotações..."
			   class="h-50 border-none w-50 mx-auto px-2 input-search-client mx-auto border border-1" ></textarea>

		<textarea required asp-for="Especializations" id="favorite-service" type="text" placeholder="Especialidades..."
			   class="h-50 border-none w-50 mx-auto px-2 input-register-client mx-auto border border-1" ></textarea>

		<input class="px-5 py-1 text-dark bg-white rounded rounded-pill border-0 custom-hover" type="submit" value="Cadastrar" />
	</form>
</div>

<script>
	const successBox = document.getElementById("success-box")

	if(successBox.innerText.trim() != ""){
		setTimeout(() => {
			successBox.style.setProperty("display", "none")
		}, 3000)
	}

</script>